<div class="container my-6 text-white opacity-85 col-12 col-md-6 col-lg-4 p-3 form-shadow">

  <h2 class= "text-center">Log in</h2>
  <hr />

  <h3>Welcome on Rent a Dino</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs mt-3 mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", style: "width: 50%", class: "log-in-button"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
