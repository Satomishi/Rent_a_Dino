<div class="container my-5">
  <div class="row">
    <% @owner_dinos.each do |dino| %>
      <div class="col-12 col-sm-6 col-lg-4 col-xl-3 d-flex justify-content-center">
        <%= link_to dinosaur_path(dino), class: "text-decoration-none" do %>
          <div class="card-dino mb-5 bg-black text-white opacity-85">
            <%= cl_image_tag dino.photos[0].key, crop: :fill, width: 300 %>
            <div class="card-dino-infos">
              <div>
                <h2><%= dino.name %></h2>
                <h3><%= dino.species %></h3>
                <p><strong><%= dino.price_per_day %>â‚¬ </strong>per day</p>
              </div>
              <%= cl_image_tag dino.owner.avatar.key, class: "card-dino-user avatar-bordered" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= link_to new_my_dinosaur_path, class: "text-decoration-none w-auto" do %>
      <div class="card-dino mb-5 bg-black text-white opacity-85 border border-white">
        <div class="add-dino d-flex justify-content-center align-items-center">
          <div class="fa-solid fa-plus"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
