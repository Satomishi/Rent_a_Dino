<div class="container bg-black text-white opacity-85 col-12 col-md-6 col-lg-4 p-3" >
  <h3 class= "text-center">Rent a Dino</h3>
  <hr />
  <p>Please enter the information about your dino</p>
  <%= simple_form_for(@dino) do |f| %>
    <div class="form-inputs">
      <div class="d-flex justifu-content-between">
        <div class="me-2">
          <%= f.input :name %>
        </div>
        <div class= "ms-2">
          <%= f.input :species %>
        </div>
      </div>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_day, label: "Price per day (â‚¬)" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Pictures" %>
    </div>
    <div class="form-inputs">
      <%= f.button :submit, "Rent my dino", class: "btn btn-primary", style: "width: 100%" %>
    </div>
  <% end %>
</div>
