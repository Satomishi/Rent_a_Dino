<%# On affiche les user_bookings %>

<div class="container text-center">
  <h2 id='my-booking-title'>My rents</h2>
</div>
<% @bookings.each do |b| %>
<div class="container card-booked-dino">
  <div class="row">
    <div class="col card-image">
      <%= cl_image_tag b.dinosaur.photos[0].key, height: 100, width: 100, crop: :fill, id: "dino-avatar" %>
    </div>
    <div class="col">
      <p><%= link_to b.dinosaur.name, dinosaur_path(b.dinosaur), class: "name" %></p>
      <p class="species"><em><%= b.dinosaur.species %></em></p>
    </div>
    <div class="col">
      <p>From : <%= b.start_date.day %>/<%= b.start_date.month %>/<%= b.start_date.year %></p>
      <p>To : <%= b.end_date.day %>/<%= b.end_date.month %>/<%= b.end_date.year %></p>
    </div>
    <div class="col">
      <p id="booking-price">Price : <%= b.booking_price.fdiv(100) %>â‚¬</p>
      <p id="client">Booked by:<br><%= b.user.first_name%> <%= b.user.last_name%></p>
    </div>
    <div class="col">
      <h5 class="<%= b.status %> m-0"><%= b.status %></h5>
      <% if b.status == "pending" %>
      <div class="d-flex justify-content-around mt-3">
        <%= link_to "Accept", accept_my_rent_path(b), data: {turbo_method: :patch}, class: "link-success" %>
        <%= link_to "Deny", deny_my_rent_path(b), data: {turbo_method: :patch}, class: "link-danger" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
